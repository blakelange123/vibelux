{
  "buildCommand": "node --version && npm --version && rm -rf .next && npx prisma generate && npm run build",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "installCommand": "npm install --legacy-peer-deps",
  "build": {
    "env": {
      "NEXT_TELEMETRY_DISABLED": "1",
      "NODE_OPTIONS": "--max-old-space-size=4096"
    }
  },
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  }
}